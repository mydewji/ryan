{
  "name": "Ryan",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Ryan - the only extension you need for motivation",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.linkedin.com/*",
        "https://*.linkedin.com/*"
      ],
      "js": [
        "scripts/linkedin.js"
      ]
    },
    {
      "matches": [
        "http://*.facebook.com/*",
        "https://*.facebook.com/*"
      ],
      "js": [
        "scripts/facebook.js"
      ]
    },
    {
      "matches": [
        "http://*.reddit.com/*",
        "https://*.reddit.com/*"
      ],
      "js": [
        "scripts/reddit.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/RyanHead.png",
    "css/reddit.css",
    "css/linkedin.css",
    "css/facebook.css"
  ],
  "permissions": [
    "tabs",
    "storage",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*",
    "http://*.reddit.com/*",
    "https://*.reddit.com/*",
    "http://*.linkedin.com/*",
    "https://*.linkedin.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "chrome_url_overrides": {
    "newtab": "ryan.html"
  }
}